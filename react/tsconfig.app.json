{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020", // Modern JavaScript target
    "module": "ESNext", // Use ES modules
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Include DOM and modern JavaScript libraries
    "jsx": "react-jsx", // Use the new JSX transform for React

    /* Module Resolution */
    "moduleResolution": "node", // Resolve modules in Node.js style
    "allowSyntheticDefaultImports": true, // Allow default imports from modules without default exports
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules

    /* Strict Type-Checking Options */
    "strict": true, // Enable all strict type-checking options
    "noImplicitAny": true, // Disallow `any` type unless explicitly specified
    "strictNullChecks": true, // Ensure null and undefined are handled explicitly
    "strictFunctionTypes": true, // Enforce stricter function type compatibility
    "strictBindCallApply": true, // Check argument types in `bind`, `call`, and `apply`
    "noImplicitThis": true, // Disallow `this` being implicitly `any`
    "alwaysStrict": true, // Parse in strict mode and emit `"use strict"`

    /* Additional Checks */
    "noUnusedLocals": true, // Report unused local variables
    "noUnusedParameters": true, // Report unused function parameters
    "noFallthroughCasesInSwitch": true, // Disallow fallthrough in switch statements
    "noImplicitReturns": true, // Ensure all code paths in a function return a value

    /* Output Options */
    "noEmit": true, // Do not emit compiled files (useful for projects using bundlers)

    /* Bundler Compatibility */
    "isolatedModules": true, // Ensure each file can be safely transpiled without type information
    "skipLibCheck": true, // Skip type checking of declaration files for faster builds
    "allowImportingTsExtensions": true, // Allow importing `.ts`/`.tsx` files directly

    /* Experimental Options */
    "useDefineForClassFields": true // Use `define` semantics for class fields
  }
}